/* pages/center/center.wxss */
.center{
  min-height: 100vh;
  background-color: #EFF3F4;
  font-family: PingFangSC-Medium, PingFang SC;
}
.center .bg{
  display: block;
  width: 150%;
  position: absolute;
  left: -25%;
  top:0;
  height: 375rpx;
  background-color: #173B8C;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius:  50%;
}
.warp{
  position: relative;
  z-index: 3;
  padding-top: 179rpx;
}
.warp .mian{
  background-color: #fff;
  width: 686rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  padding-bottom: 35rpx;
}
.warp .avatar{
  width: 189rpx;
  height: 189rpx;
  box-shadow: 0px 6rpx 20rpx 0px rgba(0, 0, 0, 0.14);
  border: 3rpx solid #FFFFFF;
  display: block;
  margin: 0 auto;
  border-radius: 50%;
  position: relative;
  top: -95rpx;
}
.warp .title{
  font-size: 34rpx;
  font-weight: 600;
  color: #26292C;
  line-height: 48rpx;
  margin: -59rpx auto 42rpx;
  text-align: center;
}
.warp .box{
  border-top:1px solid rgba(241, 241, 242, 0.5);
  padding: 42rpx 0 33rpx;
  width: 623rpx;
  margin: 0 auto;
}
.warp .btn{
  background-color: #173B8C;
  color: #fff;
  text-align: center;
  width: 520rpx;
  margin: 30rpx auto;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  border-radius: 6rpx;

}
.warp .box .icon{
  display: block;
  width: 44rpx;
  height: 44rpx;
}
.warp .box .fa{
  display: inline-block;
  margin-left: 28rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #26292C;
  line-height: 44rpx;
}