/* pages/login/login.wxss */
.login{
  min-height: calc(100vh - 96rpx);
  background-color: #173B8C;
  padding-top: 96rpx;
  font-family: PingFangSC-Medium, PingFang SC;
}
.warp .logo{
  display: block;
  width: 482rpx;
  height: 83rpx;
  margin: 0 auto 118rpx;
}
.warp .mian{
  background-color: #fff;
  border-radius: 10rpx;
  margin:0 auto 62rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  width: 686rpx;
}
.warp .box{
  padding: 30rpx 0;
  position: relative;
}
.warp .box:last-child{
  border-top: 1px solid rgba(241, 241, 242, 0.5);
}
.warp .box .fa{
  font-size: 26rpx;
  font-weight: 400;
  color: #A1A6B2;
  line-height: 37rpx;
  margin-bottom: 4rpx;
}
.warp .box .text{
  font-size: 34rpx;
  font-weight: 500;
  color: #26292C;
  line-height: 48rpx;
  display: block;
  width: 100%;
}
.warp .box .code{
  display: block;
  position: absolute;
  right: 0;
  top:71rpx;
  z-index: 3;
  line-height: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #C7592C;
}
.login .submit{
  width: 581rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #C7592C;
  border-radius: 8rpx;
  margin: 0 auto;
  font-size: 30rpx;
  font-weight: 600;
  color: #FFFFFF;
}