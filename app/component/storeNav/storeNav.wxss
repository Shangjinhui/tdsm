.nave {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  /* align-items: flex-end; */
  z-index: 10;
  background: #fff;
  box-shadow: 0px 3rpx 37rpx 0px rgba(231, 231, 231, 0.5);
}

.nave.on {
  height: 168rpx;
  padding-bottom: 0.68rpx;
}

.nave-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
  color: #999;
  font-size: 22rpx;
  flex-direction: column;
  height: 103rpx;
  position: relative;
  width: 25%;
}

.nave-item text {
  font-size: 20rpx;
  line-height: 24rpx;
  padding: 0 8rpx;
  color: #fff;
  background: #e12219;
  top: 10rpx;
  border-radius: 12rpx;
  position: absolute;
  right: 25rpx;
}

.nave-item.on {
  color: #e12920;
}

.nave-ico {
  width: 48rpx;
  height: 48rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
}

.nave-ico1{
  width: 85rpx;
  height: 85rpx;
  background: no-repeat center/cover;
  border-radius: 50%;
}
